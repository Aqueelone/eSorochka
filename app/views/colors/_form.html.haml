= simple_form_for(@color) do |f|
  - if @color.errors.any?
    .alert.alert-error
      %b
        = pluralize(@color.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @color.errors.full_messages.each do |msg|
          %li= msg
  %table.table-striped.table-bordered.table-condensed.table-color-form{:role => "grid"}
    %tr
      %td{:scope => "row"}= f.label :name
      %td= f.text_field :name, class: "name_field"
    %tr
      %td{:scope => "row"}= f.label :color_gid
      %td= f.input :color_gid, as: :minicolors, input_html: {data: {minicolors: {theme: :bootstrap, position: :right}}}, class: 'name_field'
    %tr
      %td= bootstrap_icon_link_to 'Cancel', colors_path, 'glyphicon glyphicon-time icon-white', :class => "button btn btn-warning"
      %td= f.submit :class => "button btn btn-success"
= form_for(@size) do |f|
  - if @size.errors.any?
    .alert.alert-error
      %b
        = pluralize(@size.errors.count, "error")
        prohibited this size from being saved:
      %ul
        - @size.errors.full_messages.each do |msg|
          %li= msg
  %table.table.table-striped.table-bordered.table-condensed.table-user-form{:role => "grid"}
    %tr
      %td{:scope => "row"}= f.label :name
      %td= f.text_field :name, class: "name_field"
    %tr
      %td{:scope => "row"}= f.label :sign
      %td= f.text_field :sign, class: "name_field"
    %tr
      %td= bootstrap_icon_link_to t(:_cansel), sizes_path, 'glyphicon glyphicon-time icon-white', :class => "button btn btn-warning"
      %td= f.submit :class => "button btn btn-success"